@model MBNSystem.Models.Client


@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="addclients" style="padding: 20px">
    <div class="form-horizontal col-ml-9">
        <div class="modal-header">
            <h4>Add Client</h4>
            <hr />
        </div>

        @using (Ajax.BeginForm("AddClientsAuthorize", "Clients", new AjaxOptions
        {
            HttpMethod = "POST",
            OnSuccess = "AddClientsSuccess",
            InsertionMode = InsertionMode.Replace
        }, new { @id = "form" }))
        {
            <div id="modal-body" class="modal-body add-client-modal-body">
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="form-group-col">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        </div>
                        @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control txt-clientsname", @placeholder = "Client's Name" } })
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="col-md-8 float-left">
                        <div class="form-group-col">
                            @Html.LabelFor(model => model.PANNo, htmlAttributes: new { @class = "control-label" })
                        </div>
                        @Html.EditorFor(x => x.PANNo, new { htmlAttributes = new { @class = "form-control text-panno ", @placeholder = "Pan No." } })
                    </div>
                    <div class="col-md-4 float-right">
                        <div class="form-group-col">
                            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label" })
                        </div>
                        @Html.DropDownListFor(model => model.Status, new List<SelectListItem>
                            {
                            new SelectListItem {Text = "Active", Value = "1"},
                            new SelectListItem {Text = "Discontinued", Value = "9" } }, new
                            {
                                    @class = "form-control tri-state list-box"
                            })
                    </div>
                    <br />
                </div>

                <div class="modal-footer col-md-12">
                    <input id="formbtn-addclients" type="submit" value="Add Client" class="btn btn-primary mt-2" />
                </div>
            </div>
        }
    </div>


</div>